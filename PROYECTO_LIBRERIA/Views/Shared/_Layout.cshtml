<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SysLibreria - Menú Directo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/2.1.5/css/dataTables.dataTables.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/3.1.2/css/buttons.dataTables.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    <link href="~/css/Sweet2.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
</head>
<body>

    <nav class="sidebar d-flex flex-column" id="sidebar" aria-label="Sidebar">
        <div class="sidebar-header">
            <img src="~/img/58596975_9391714(1).png" alt="Logo" />
            <span class="menu-text">SysLibreria</span>
        </div>

        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-action="IndexInformativo" asp-controller="Home">
                    <i class="bi bi-info-circle-fill nav-icon"></i>
                    <span class="menu-text">INFORMACIÓN</span>
                </a>
            </li>

            @if (User.IsInRole("ADMINISTRADOR"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-action="GestionUsuario" asp-controller="Home">
                        <i class="bi bi-people-fill nav-icon"></i>
                        <span class="menu-text">USUARIOS</span>
                    </a>
                </li>
            }

            @if (User.IsInRole("ADMINISTRADOR"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-action="IndexProducto" asp-controller="Productos">
                        <i class="bi bi-box-seam-fill nav-icon"></i>
                        <span class="menu-text">PRODUCTOS</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="StockAlmacen" asp-controller="Productos">
                        <i class="bi bi-database-fill-check nav-icon"></i>
                        <span class="menu-text">STOCK ALMACÉN</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="CategoriasProductos" asp-controller="Productos">
                        <i class="bi bi-tags-fill nav-icon"></i>
                        <span class="menu-text">CATEGORÍAS PROD.</span>
                    </a>
                </li>
            }

            @if (User.IsInRole("ADMINISTRADOR") || User.IsInRole("ANALISTA") || User.IsInRole("SUPERVISOR"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-action="GenerarVenta" asp-controller="Libreria">
                        <i class="bi bi-cart-fill nav-icon"></i>
                        <span class="menu-text">GENERAR VENTA</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="GenerarCotizacion" asp-controller="Libreria">
                        <i class="bi bi-file-earmark-text-fill nav-icon"></i>
                        <span class="menu-text">COTIZACIÓN</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="ConsultaVentasCotizacion" asp-controller="Libreria">
                        <i class="bi bi-search nav-icon"></i>
                        <span class="menu-text">CONSULTA VENTAS</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="IndexProveedor" asp-controller="Proveedores">
                        <i class="bi bi-truck nav-icon"></i>
                        <span class="menu-text">PROVEEDORES</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Reportes">
                        <i class="bi bi-bar-chart-line-fill nav-icon"></i>
                        <span class="menu-text">REPORTES VENTAS</span>
                    </a>
                </li>
            }
        </ul>

        <div class="sidebar-footer mt-auto">
            <a class="nav-link text-danger fw-bold d-flex align-items-center" id="idCerrarSesion" style="cursor:pointer;" onclick="Cerrar()">
                <i class="bi bi-box-arrow-right nav-icon"></i>
                <span class="menu-text">Cerrar sesión</span>
            </a>
        </div>
    </nav>

    <button class="btn btn-primary toggle-btn" style="background:#2f4050;" id="btnToggle">
        <i class="bi bi-list"></i>
    </button>

    <main class="main-content flex-grow-1 p-3">
        <br>
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.1/js/dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Función para cerrar sesión
        function Cerrar() {
            $.ajax({
                url: "@Url.Action("CerrarSesion", "Home")",
                type: "POST",
                success: function () {
                    window.location.href = '/Home/Index';
                },
                error: function (xhr, status, error) {
                    Swal.fire('Error', 'No se pudo cerrar sesión', 'error');
                }
            });
        }

        // Lógica del Sidebar (Colapsar/Expandir)
        const sidebar = document.getElementById("sidebar");
        const toggleBtn = document.getElementById("btnToggle");

        toggleBtn.onclick = () => {
            if (window.innerWidth <= 768) {
                sidebar.classList.toggle("show-mobile");
            } else {
                sidebar.classList.toggle("collapsed");
            }
        };
    </script>

</body>
</html>