@using System.Security.Claims
@{
    ViewData["Title"] = "GestionUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Capturamos el usuario actual de forma segura
    var usuarioActual = User.FindFirstValue(ClaimTypes.Name) ?? User.Identity?.Name ?? "";
}

<style>
    .page-item.active .page-link {
        z-index: 3;
        color: #fff !important;
        background-color: #212529 !important;
        border-color: #212529 !important;
    }
    .page-link { color: #212529 !important; }
    .page-link:focus { box-shadow: 0 0 0 0.25rem rgba(33, 37, 41, 0.25); }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-0"><i class="bi bi-people-fill me-2"></i>Gestión de Usuarios</h2>
        <small class="text-muted">Administración y control de accesos del sistema</small>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3 col-sm-6">
        <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div><span class="text-muted small fw-bold">Usuarios Activos</span><h3 class="mb-0 fw-bold text-success" id="idUSuariosActivos">0</h3></div>
                <div class="bg-success bg-opacity-10 text-success p-3 rounded-circle"><i class="bi bi-person-check-fill fs-4"></i></div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card border-0 shadow-sm h-100 border-start border-4 border-danger">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div><span class="text-muted small fw-bold">Usuarios Inactivos</span><h3 class="mb-0 fw-bold text-danger" id="idUsuarioInactivos">0</h3></div>
                <div class="bg-danger bg-opacity-10 text-danger p-3 rounded-circle"><i class="bi bi-person-x-fill fs-4"></i></div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card border-0 shadow-sm h-100 border-start border-4 border-info">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div><span class="text-muted small fw-bold">Áreas Registradas</span><h3 class="mb-0 fw-bold text-info" id="idCantidadAreas">4</h3></div>
                <div class="bg-info bg-opacity-10 text-info p-3 rounded-circle"><i class="bi bi-building fs-4"></i></div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="card border-0 shadow-sm h-100 border-start border-4 border-warning">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div><span class="text-muted small fw-bold">Módulos Sistema</span><h3 class="mb-0 fw-bold text-warning" id="idModulos">9</h3></div>
                <div class="bg-warning bg-opacity-10 text-warning p-3 rounded-circle"><i class="bi bi-grid-3x3-gap-fill fs-4"></i></div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <span><i class="bi bi-table me-2"></i> Listado de Usuarios</span>
        <div>
            <button class="btn btn-success btn-sm" id="btnCrearUsuario" data-bs-toggle="modal" data-bs-target="#xIDusuarioModal">
                <i class="bi bi-person-plus-fill me-1"></i> Nuevo Usuario
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tblUsuarioLista" class="table table-striped table-bordered w-100">
                <thead>
                    <tr>
                        <th class="text-center">Item</th>
                        <th>Usuario</th>
                        <th>Rol</th>
                        <th>Email</th>
                        <th>Nombre Completo</th>
                        <th class="text-center">Estado</th>
                        <th>F. Registro</th>
                        <th class="text-center" style="width: 90px;">Acciones</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="xIDusuarioModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-user-plus me-2"></i>Nuevo Usuario</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body modal-body-scroll">
                <form id="usuarioForm">
                    <div class="row mb-4">
                        <div class="col-12"><h6 class="border-bottom pb-2 text-primary"><b>DATOS PERSONALES</b></h6></div>
                        <div class="col-12 mb-3"><label class="form-label required">Nombre Completo</label><input type="text" class="form-control" id="nombreCompleto" required></div>
                        <div class="col-md-6 mb-3"><label class="form-label required">Tipo Documento</label><select class="form-select" id="idTipoDocumento" required><option value="" disabled selected>-- Seleccione --</option></select></div>
                        <div class="col-md-6 mb-3"><label class="form-label required">Nro Documento</label><input type="text" class="form-control" id="nroDocumento" required></div>
                        <div class="col-12 mb-3"><label class="form-label required">Dirección</label><input type="text" class="form-control" id="direccion" required></div>
                        <div class="col-md-6 mb-3"><label class="form-label required">Ubigeo</label><input type="text" class="form-control" id="ubigeo" required></div>
                        <div class="col-md-6 mb-3"><label class="form-label required">Teléfono</label><input type="tel" class="form-control" id="telefono" required></div>
                        <div class="col-12 mb-3"><label class="form-label required">Email</label><input type="email" class="form-control" id="correoElectronico" required></div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-12"><h6 class="border-bottom pb-2 text-primary"><b>CREDENCIALES</b></h6></div>
                        <div class="col-md-6 mb-3"><label class="form-label required">Usuario</label><input type="text" class="form-control" id="usuarioNombre" required></div>
                        <div class="col-md-3 mb-3"><label class="form-label required">Rol</label><select class="form-select" id="idRol" required><option value="" disabled selected>-- Seleccione --</option></select></div>
                        
                        <div class="col-md-3 mb-3">
                            <label class="form-label required">Estado Inicial</label>
                            <select class="form-select" id="cboEstadoCrear" required>
                                <option value="1" selected>ACTIVO</option>
                                <option value="0">INACTIVO</option>
                            </select>
                        </div>

                        <div class="col-12 mb-3">
                            <label class="form-label required">Contraseña</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="contrasenia" required>
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword"><i class="fas fa-eye"></i></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardar"><i class="fas fa-save me-2"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="frmActualizarUsuario" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-user-edit me-2"></i>Editar Usuario</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body modal-body-scroll">
                <form id="usuarioFormUpd">
                    <div class="row mb-4">
                        <div class="col-12"><h6 class="border-bottom pb-2 text-primary"><b>DATOS PERSONALES</b></h6></div>
                        <div class="col-12 mb-3"><label class="form-label required">Nombre Completo</label><input type="text" class="form-control" id="nombreCompletoUpd" required></div>
                        <div class="col-md-6 mb-3"><label class="form-label required">Tipo Documento</label><select class="form-select" id="idTipoDocumentoUpd" required><option value="" disabled selected>-- Seleccione --</option></select></div>
                        <div class="col-md-6 mb-3"><label class="form-label required">Nro Documento</label><input type="text" class="form-control" id="nroDocumentoUpd" required></div>
                        <div class="col-12 mb-3"><label class="form-label required">Dirección</label><input type="text" class="form-control" id="direccionUpd" required></div>
                        <div class="col-md-6 mb-3"><label class="form-label required">Ubigeo</label><input type="text" class="form-control" id="ubigeoUpd" required></div>
                        <div class="col-md-6 mb-3"><label class="form-label required">Teléfono</label><input type="tel" class="form-control" id="telefonoUpd" required></div>
                        <div class="col-12 mb-3"><label class="form-label required">Email</label><input type="email" class="form-control" id="correoElectronicoUpd" required></div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-12"><h6 class="border-bottom pb-2 text-primary"><b>CREDENCIALES Y ESTADO</b></h6></div>
                        <div class="col-md-6 mb-3"><label class="form-label required">Usuario</label><input type="text" class="form-control" id="usuarioNombreUpd" required></div>
                        <div class="col-md-3 mb-3"><label class="form-label required">Rol</label><select class="form-select" id="idRolUpd" required><option value="" disabled selected>-- Seleccione --</option></select></div>
                        
                        <div class="col-md-3 mb-3">
                            <label class="form-label required">Estado</label>
                            <select class="form-select" id="cboEstadoUpd" required>
                                <option value="1" selected>ACTIVO</option>
                                <option value="0">INACTIVO</option>
                            </select>
                        </div>

                        <div class="col-12 mb-3">
                            <label class="form-label">Contraseña (Opcional)</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="contraseniaUpd" placeholder="Dejar vacío para mantener">
                                <button class="btn btn-outline-secondary" type="button" id="togglePasswordUpd"><i class="fas fa-eye"></i></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarUpd"><i class="fas fa-save me-2"></i>Actualizar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        let tablaUsuarios;
        let modalCrear;
        let modalEditar;

        $(document).ready(function () {
            modalCrear = new bootstrap.Modal(document.getElementById('xIDusuarioModal'));
            modalEditar = new bootstrap.Modal(document.getElementById('frmActualizarUsuario'));

            ufn_UsuarioTablaCargar();
            CargarUsuarioIndicadores();

            // --- BOTÓN NUEVO ---
            $("#btnCrearUsuario").on("click", async function () {
                document.getElementById('usuarioForm').reset();

                // Cargamos combos y esperamos a que terminen
                await Promise.all([
                    LlenarCombo('@Url.Action("RolLista_Controller", "Home")', "#idRol"),
                    LlenarCombo('@Url.Action("TipoDocumentoLista_Controller", "Home")', "#idTipoDocumento")
                ]);

                // Forzamos ACTIVO por defecto
                $('#cboEstadoCrear').val("1");
            });

            // --- BOTÓN GUARDAR (NUEVO) ---
            $('#btnGuardar').on('click', function () {
                const form = document.getElementById('usuarioForm');
                if (!form.checkValidity()) { form.reportValidity(); return; }

                const formData = {
                    idTipoDocumento: $('#idTipoDocumento').val(),
                    nroDocumento: $('#nroDocumento').val(),
                    nombreRazon: $('#nombreCompleto').val(),
                    direccion: $('#direccion').val(),
                    ubigeo: $('#ubigeo').val(),
                    email: $('#correoElectronico').val(),
                    telefono: $('#telefono').val(),
                    usuario: $('#usuarioNombre').val(),
                    contrasenia: $('#contrasenia').val(),
                    idRol: $('#idRol').val(),
                    activo: $('#cboEstadoCrear').val() === "1"
                };
                RegistrarUsuario(formData);
            });

            // --- BOTÓN ACTUALIZAR ---
            $('#btnGuardarUpd').on('click', function () {
                const form = document.getElementById('usuarioFormUpd');
                if (!form.checkValidity()) { form.reportValidity(); return; }

                // Validación de auto-bloqueo
                const usuarioEditando = $('#usuarioNombreUpd').val().toUpperCase().trim();
                const usuarioLogueado = '@Html.Raw(usuarioActual)'.toUpperCase().trim();
                const nuevoEstado = $('#cboEstadoUpd').val();

                if (usuarioEditando === usuarioLogueado && nuevoEstado === "0") {
                    Swal.fire('Acción no permitida', 'No puedes desactivar tu propio usuario.', 'warning');
                    return;
                }

                // Si el combo está deshabilitado (soy yo mismo), forzamos true (Activo)
                const estaBloqueado = $('#cboEstadoUpd').prop('disabled');
                const estadoFinal = estaBloqueado ? true : (nuevoEstado === "1");

                const formDataUpd = {
                    entidadId: localStorage.getItem("xIdusuario"),
                    idTipoDocumento: $('#idTipoDocumentoUpd').val(),
                    nroDocumento: $('#nroDocumentoUpd').val(),
                    nombreRazon: $('#nombreCompletoUpd').val(),
                    direccion: $('#direccionUpd').val(),
                    ubigeo: $('#ubigeoUpd').val(),
                    email: $('#correoElectronicoUpd').val(),
                    telefono: $('#telefonoUpd').val(),
                    usuario: $('#usuarioNombreUpd').val(),
                    contrasenia: $('#contraseniaUpd').val(),
                    idRol: $('#idRolUpd').val(),
                    activo: estadoFinal
                };
                ActualizarUsuario(formDataUpd);
            });

            // Toggles
            setupToggle('togglePassword', 'contrasenia');
            setupToggle('togglePasswordUpd', 'contraseniaUpd');
        });

        // ==========================================
        //  FUNCIONES CORE (CARGA DE DATOS)
        // ==========================================

        // Esta función ahora es ASÍNCROMA (async) para esperar a los combos
                async function cargar(Valor) {
            try {
                // 1. Cargar combos primero y esperar
                await Promise.all([
                    LlenarCombo('@Url.Action("RolLista_Controller", "Home")', "#idRolUpd"),
                    LlenarCombo('@Url.Action("TipoDocumentoLista_Controller", "Home")', "#idTipoDocumentoUpd")
                ]);

                // 2. Obtener datos del usuario
                $.ajax({
                    url: "@Url.Action("UsuariosObtener_Controller", "Home")",
                    type: 'GET',
                    data: { id: Valor },
                    success: function (data) {
                        localStorage.setItem("xIdusuario", data.entidadId);

                        // Mapeo de campos
                        $('#nombreCompletoUpd').val(data.nombreRazon);
                        $('#nroDocumentoUpd').val(data.nroDocumento);
                        $('#direccionUpd').val(data.direccion);
                        $('#ubigeoUpd').val(data.ubigeo);
                        $('#telefonoUpd').val(data.telefono);
                        $('#correoElectronicoUpd').val(data.email);
                        $('#usuarioNombreUpd').val(data.usuario);

                        $('#idTipoDocumentoUpd').val(data.idTipoDocumento);
                        $('#idRolUpd').val(data.idrol);

                        // --- CORRECCIÓN AQUÍ ---
                        // Buscamos la propiedad sea 'activo' (minúscula) o 'Activo' (mayúscula)
                        let valorRecibido = data.activo !== undefined ? data.activo : data.Activo;
                        let esInactivo = (valorRecibido === false || valorRecibido === 0 || valorRecibido === "0");

                        $('#cboEstadoUpd').val(esInactivo ? "0" : "1");
                        // -----------------------

                        // Lógica de bloqueo (si es el mismo usuario)
                        const usuarioLogueado = '@Html.Raw(usuarioActual)'.toUpperCase().trim();
                        const usuarioEditando = (data.nombreRazon || "").toUpperCase().trim();
                        if (usuarioEditando === usuarioLogueado) {
                            $('#cboEstadoUpd').prop('disabled', true);
                        } else {
                            $('#cboEstadoUpd').prop('disabled', false);
                        }

                        modalEditar.show();
                    },
                    error: function () { Swal.fire('Error', 'No se pudieron cargar los datos.', 'error'); }
                });

            } catch (error) {
                console.error(error);
            }
        };

        // Función genérica que devuelve una PROMESA (importante para el await)
        function LlenarCombo(url, selector) {
            return $.ajax({
                url: url,
                type: "GET",
                datatype: "json",
                success: function (res) {
                    $(selector).empty().append('<option value="">-- Seleccione --</option>');
                    $.each(res, function (i, item) {
                        var val = item.idrol || item.idTipoDocumento;
                        var txt = item.rolnombre || item.documento;
                        $(selector).append($("<option>").attr({ "value": val }).text(txt));
                    });
                }
            });
        }

        // --- RESTO DE FUNCIONES (TABLA, CRUD, ETC) ---

        function setupToggle(btnId, inputId) {
            const btn = document.getElementById(btnId);
            const input = document.getElementById(inputId);
            if (btn && input) {
                btn.addEventListener('click', function () {
                    const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                    input.setAttribute('type', type);
                    this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
                });
            }
        }

        function ufn_UsuarioTablaCargar() {
            tablaUsuarios = $('#tblUsuarioLista').DataTable({
                "ajax": { "url": "@Url.Action("UsuariosListaGeneral_Controller", "Home")", "type": "GET", "datatype": "json" },
                "columns": [
                    { "data" : "entidadId" },
                    { "data" : "usuario" },
                    { "data" : "codigo", "className": "fw-bold" },
                    { "data" : "email" },
                    { "data" : "nombreRazon" },
                    {
                        "data" : "activo", "className": "text-center",
                        "render": function (data) {
                            return (data === true || data === 1)
                                ? `<span class="badge bg-success">ACTIVO</span>`
                                : `<span class="badge bg-danger">INACTIVO</span>`;
                        }
                    },
                    { "data" : "fechaRegistro" },
                    {
                        "data": null, "className": "text-center",
                        "render": function (data, type, row) {
                            return `<button onclick="cargar(${row.entidadId})" class="btn btn-primary btn-sm me-1"><i class="bi bi-pencil-square"></i></button>`;
                        }
                    }
                ],
                "language": { url: "https://cdn.datatables.net/plug-ins/2.1.5/i18n/es-MX.json" },
                "columnDefs": [ { "width": "5%", "targets": 0 }, { "width": "10%", "targets": 5 }, { "width": "8%", "targets": 7 } ],
                buttons: [
                    {   extend: "excelHtml5", className: "btn btn-success btn-sm", 
                        text: '<i class="bi bi-file-excel"></i> Excel', 
                        exportOptions: { columns: [1,2,3,4,5,6]} },
                    {   extend: "pdfHtml5", 
                        className: "btn btn-danger btn-sm", 
                        text: '<i class="bi bi-file-pdf"></i> PDF', 
                        exportOptions: { columns: [1,2,3,4,5,6]} },
                    {   extend: "print", 
                        className: "btn btn-secondary btn-sm", 
                        text: '<i class="bi bi-printer"></i> Imprimir', 
                        exportOptions: { columns: [1,2,3,4,5,6]} }
                ],
                initComplete: function () { $('.btn-group').addClass('mb-2'); }
            });
        }

        function CargarUsuarioIndicadores() {
            $.ajax({
                url: '@Url.Action("UsuariosIdndicadores_Controller", "Home")',
                type: "GET", datatype: "json",
                success: function (data) {
                    $("#idUSuariosActivos").text(data.usuariosActivos);
                    $("#idUsuarioInactivos").text(data.usuariosInactivos);
                }
            });
        }

        function RegistrarUsuario(data) { EnviarDatos('@Url.Action("UsuariosCrear_Controller", "Home")', data, modalCrear, '¡Creado!'); }
        function ActualizarUsuario(data) { EnviarDatos('@Url.Action("UsuariosActualizar_Controller", "Home")', data, modalEditar, '¡Actualizado!'); }

        function EnviarDatos(url, data, modal, msgExito) {
            $.ajax({
                url: url, type: "POST", data: JSON.stringify(data),
                contentType: "application/json; charset=utf-8", dataType: "json",
                success: function (res) {
                    if (res.codMensaje == "1") {
                        Swal.fire({ title: msgExito, text: res.mensaje, icon: 'success', confirmButtonText: 'Aceptar' })
                        .then(() => {
                            modal.hide();
                            tablaUsuarios.ajax.reload(null, false);
                            CargarUsuarioIndicadores();
                        });
                    } else {
                        Swal.fire('Error', res.mensaje, 'error');
                    }
                }
            });
        }
    </script>
}